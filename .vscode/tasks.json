{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./build.sh",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
        },
        {
            "label": "release",
            "type": "shell",
            "command": "./build_release.sh",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "clippy lint",
            "type": "shell",
            "command": "cargo",
            "args": [
                "clippy"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}